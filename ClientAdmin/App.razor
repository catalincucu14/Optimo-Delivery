@inject INavigationService NavigationService;

<CascadingAuthenticationState>
    <CascadingBlazoredModal Animation="@ModalAnimation.FadeInOut(.2)" HideHeader="true" DisableBackgroundCancel="true" ContentScrollable="true">
        <Router AppAssembly="@typeof(Program).Assembly" PreferExactMatches="@true">
            <Found Context="routeData">
                <AuthorizeRouteView RouteData="@routeData" DefaultLayout="@typeof(EmptyLayout)" />
            </Found>
            <NotFound>
                <PageTitle>Not found</PageTitle>
                <LayoutView Layout="@typeof(EmptyLayout)">
                    <div class="loading">
                        <div class="not-found-container flex-center flex-column-center">
                            <div class="flex-center flex-row-center">
                                <span>4</span>
                                <button @onclick="@NavigationService.ToHome" title="To Home Page" />
                                <span>4</span>
                            </div>
                            <div>
                                Sorry, there's nothing at this address
                            </div>
                        </div>
                    </div>
                </LayoutView>
            </NotFound>
        </Router>
    </CascadingBlazoredModal>
</CascadingAuthenticationState>
